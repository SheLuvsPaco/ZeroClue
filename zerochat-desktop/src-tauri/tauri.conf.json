{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zerochat Desktop",
  "version": "0.1.0",
  "identifier": "com.redloop.zerochat",
  "build": {
    "beforeDevCommand": "echo 'Skipping auto-start'",
    "beforeBuildCommand": "echo 'Skipping dev start'",
    "devUrl": "http://172.20.10.11:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ZeroChat Desktop",
        "width": 900,
        "height": 900
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": []
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "perMachine"
      }
    }
  }
}