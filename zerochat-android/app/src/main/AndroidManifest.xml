<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zerochat.app">

  <application
      android:label="ZeroChat"
      android:icon="@android:drawable/sym_def_app_icon"
      android:allowBackup="true"
      android:theme="@style/Theme.ZeroChat">

    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <!-- zerochat://provision?token=... and zerochat://invite?token=... -->
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data android:scheme="zerochat" android:host="provision"/>
        <data android:scheme="zerochat" android:host="invite"/>
      </intent-filter>

    </activity>

  </application>

</manifest>


